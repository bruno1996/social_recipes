<h1>Nova Receita</h1>

<%= flash[:error] %>

<%= form_for @recipe do |f| %>
<dl>
  <dt><%= f.label :recipe_name, 'Nome da Receita' %></dt>
  <dd><%= f.text_field :recipe_name %></dd>

  <dt><%= f.label :kitchen, 'Cozinha' %></dt>
  <dd><%= f.text_field :kitchen %></dd>

  <dt><%= f.label :type_of_food, 'Tipo de Comida' %></dt>
  <dd><%= f.text_field :type_of_food %></dd>

  <dt><%= f.label :how_many_people_serves, 'Quantas Pessoas Serve' %></dt>
  <dd><%= f.text_field :how_many_people_serves %></dd>

  <dt><%= f.label :preparation_time, 'Tempo de Preparação' %></dt>
  <dd><%= f.text_field :preparation_time %></dd>

  <dt><%= f.label :difficulty_level, 'Nivel de Dificuldade'%></dt>
  <dd><%= f.text_field :difficulty_level %></dd>

  <dt><%= f.label :ingredients, 'Ingredients' %></dt>
  <dd><%= f.text_field :ingredients %></dd>

  <dt><%= f.label :step_by_step, 'Passo a Passo' %></dt>
  <dd><%= f.text_field :step_by_step %></dd>
  <br>
<%= f.submit 'Postar Receita' %>
</dl>
<% end %>

<%= link_to 'Voltar', root_path %>
